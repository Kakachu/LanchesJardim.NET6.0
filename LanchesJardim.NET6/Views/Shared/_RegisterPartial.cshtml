@model LoginViewModel

<head>
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link rel="stylesheet" href="~/LoginRegister.css">
</head>
<body>
    <form asp-controller="Account" asp-action="Register" method="post" class="form-horizontal">
        <div class="center-wrap">
            <div class="section text-center">
                <h4 class="mb-4 pb-3">Registrar</h4>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="UserName" class="form-style" placeholder="Seu Nome De Usuário" />
                    <i class="input-icon uil uil-user"></i>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <input asp-for="Password" class="form-style" placeholder="Sua Senha" />
                    <i class="input-icon uil uil-lock-alt"></i>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <input type="submit" class="btn mt-4" value="Registrar" />
            </div>
        </div>
    </form>
</body>