<div class="dropdown">
    <a class="nav-link text-light" dropdown-toggle" role="button"
       id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Lanches
    </a>

    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <div class="form-outline">
            <form class="navbar-form navbar-right" asp-controller="Lanche" asp-action="Search" method="get">
                <div class="input-group rounded">
                    <input type="text" class="form-control rounded" placeholder="Procurar Produto" name="searchString" value="@ViewData["searchString"]" />
                </div>
            </form>
        </div>

        <li class="dropdown-divider"></li>

        <li>
            <a class="dropdown-item" asp-controller="Lanche" asp-action="List" asp-route-categoria="" style="color:black">Todos os Lanches</a>
        </li>

        <li class="dropdown-divider"></li>
        @foreach (var categoria in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Lanche" asp-action="List" style="color:black"
               asp-route-categoria="@categoria.CategoriaNome">@categoria.CategoriaNome</a>
            </li>
        }

    </ul>
</div>